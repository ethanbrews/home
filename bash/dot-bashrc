# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
fi

# Vim within Tmux, not showing syntax hightlight. The below change fixes the
# problem: https://vi.stackexchange.com/a/16081
export TERM=xterm-256color

source $HOME/.bashrcd/prompt.sh
source $HOME/.bashrcd/functions.sh
source $HOME/.bashrcd/aliases.sh
if [ -f $HOME/.bashrcd/local.sh ]; then 
	source $HOME/.bashrcd/local.sh
fi

if [ -f ~/.fzf.bash ]; then
	source ~/.fzf.bash
fi
eval "$(zoxide init bash)"
